{
  "compilerOptions": {
    "target": "es2017",
    "lib": ["dom", "es6"],
    "sourceMap": true,
    "moduleResolution": "node",
    "jsx": "react",
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "jest"],
    "esModuleInterop": true,
    "noEmit": false,
    "noEmitOnError": true,
    "outDir": ".",
    "skipLibCheck": true,
    "module": "commonjs"
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules/*", "./src/__tests__/**/*"]
}
